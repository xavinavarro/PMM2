<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xavin.examen1_xavinavarro.Factura">

    <TextView
        android:text="Modelo: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultado_modelo"
        />
    <TextView
        android:text="Ingrediente: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultado_ingrediente"
        />
    <TextView
        android:text="Precio fijo: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultado_precio"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/resultado_imagen"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultado_cajas"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultado_radios"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultado_precio_introducido"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultado_coste"
        />
    <TextView
        android:text="Extra: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/extras"
        />

</LinearLayout>
